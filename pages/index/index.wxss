/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: row;
  position: relative;
}

.userinfo-append{
  flex-direction: column;
  display: flex;
}


.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-color: #353535;
}

.userinfo-nickname {
  color: #353535;
  font-size: 17pt;
}

.userinfo-employeenumber{
  color: #888888;
  font-size: 11pt;
}

.userinfo-type{
  position: absolute;
  font-size: 14pt;
  right: 20rpx;
  margin: 20rpx;
  display: flex;
  color: #353535;

}
.weui-grid .weui-grid__icon_img {
  width: 100%;
  height: 100%;
}
